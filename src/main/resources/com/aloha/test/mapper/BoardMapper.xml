<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace="매퍼 인터페이스 경로" -->
<mapper namespace="com.aloha.test.mapper.BoardMapper">

    <!-- 목록 -->
    <select id="list" resultType="Board">
        SELECT *
        FROM board
        ORDER BY no DESC
    </select>

    <!-- 조회 -->
    <select id="select" resultType="Board" >
        SELECT *
        FROM board
        WHERE no = #{no}
    </select>

    <!-- 등록 -->
    <insert id="insert" >
        INSERT INTO board ( title, writer, content )
        VALUES ( #{title}, #{writer}, #{content} )
    </insert>

    <!-- 수정 -->
    <update id="update">
        UPDATE board 
           SET title = #{title}
              ,writer = #{writer}
              ,content = #{content}
              ,updated_at = now()
        WHERE no = #{no}
    </update>

    <!-- 삭제 -->
    <delete id="delete">
        DELETE FROM board
        WHERE no = #{no}
    </delete>
</mapper>